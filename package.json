{
  "name": "vessel-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -F \"./packages/**\" build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "docs:dev": "pnpm -F docs dev",
    "docs:build": "pnpm -F docs build",
    "docs:preview": "pnpm -F docs preview",
    "preinstall": "node .scripts/check-for-pnpm.js && node .scripts/check-node-version.js",
    "prepare": "husky install",
    "release": "node .scripts/release.js",
    "test:node-esm": "node .scripts/test-node-esm.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,vue,md,json}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "conventional-changelog-cli": "^2.1.1",
    "enquirer": "^2.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "execa": "^5.1.1",
    "globby": "^13.1.1",
    "husky": "^7.0.4",
    "kleur": "^4.1.4",
    "lint-staged": "^11.2.6",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "volta": {
    "node": "16.15.1",
    "pnpm": "7.2.1"
  }
}
